<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:padding="$string:container_padding_size"
    ohos:background_element="$color:page_background_color"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:padding="$string:container_padding_size"
        ohos:background_element="$graphic:box_decoration"
        ohos:bottom_margin="$string:container_padding_size"
        ohos:orientation="vertical"
        ohos:alignment="center"
        ohos:height="match_parent"
        ohos:width="match_parent">
        <Image
            ohos:image_src="$media:icon_logo"
            ohos:scale_mode="stretch"
            ohos:height="$string:logo_size"
            ohos:width="$string:logo_size"/>
        <DirectionalLayout
            ohos:background_element="$graphic:input_decoration"
            ohos:orientation="horizontal"
            ohos:alignment="vertical_center"
            ohos:height="match_content"
            ohos:width="match_parent">
            <Image
                ohos:left_margin="$string:small_margin_size"
                ohos:right_margin="$string:small_margin_size"
                ohos:image_src="$media:icon_user_active"
                ohos:height="$string:middle_icon_size"
                ohos:width="$string:middle_icon_size"
                ohos:scale_mode="stretch"/>
            <TextField
                ohos:hint="$string:login_user_hint"
                ohos:text_size="$string:normal_font_size"
                ohos:id="$+id:login_user"
                ohos:height="$string:button_height_size"
                ohos:width="0"
                ohos:weight="1"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:top_margin="$string:container_padding_size"
            ohos:background_element="$graphic:input_decoration"
            ohos:orientation="horizontal"
            ohos:alignment="vertical_center"
            ohos:height="match_content"
            ohos:width="match_parent">
            <Image
                ohos:left_margin="$string:small_margin_size"
                ohos:right_margin="$string:small_margin_size"
                ohos:image_src="$media:icon_password"
                ohos:height="$string:middle_icon_size"
                ohos:width="$string:middle_icon_size"
                ohos:scale_mode="stretch"/>
            <TextField
                ohos:hint="$string:login_password_hint"
                ohos:text_size="$string:normal_font_size"
                ohos:text_input_type="pattern_password"
                ohos:id="$+id:login_password"
                ohos:height="$string:button_height_size"
                ohos:width="0"
                ohos:weight="1"/>
        </DirectionalLayout>

        <Button
            ohos:background_element="$graphic:background_logout"
            ohos:bottom_margin="$string:container_padding_size"
            ohos:text_color="$color:button_text_color"
            ohos:text_size="$string:normal_font_size"
            ohos:text="$string:login_btn"
            ohos:id="$+id:login_btn"
            ohos:height="$string:button_height_size"
            ohos:width="match_parent"/>

        <Button
            ohos:background_element="$graphic:background_logout"
            ohos:bottom_margin="$string:container_padding_size"
            ohos:text_color="$color:button_text_color"
            ohos:text_size="$string:normal_font_size"
            ohos:text="$string:register_btn"
            ohos:id="$+id:register_btn"
            ohos:height="$string:button_height_size"
            ohos:width="match_parent"/>
    </DirectionalLayout>
</DirectionalLayout>