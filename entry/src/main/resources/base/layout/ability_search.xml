<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:page_background_color"
    ohos:left_padding="$string:container_padding_size"
    ohos:right_padding="$string:container_padding_size"
    ohos:top_padding="$string:container_padding_size"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:padding="$string:container_padding_size"
        ohos:background_element="$graphic:box_decoration"
        ohos:bottom_margin="$string:container_padding_size"
        ohos:orientation="horizontal"
        ohos:height="match_content"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:background_element="$graphic:search_decoration"
            ohos:height="$string:middel_avater_size"
            ohos:orientation="horizontal"
            ohos:alignment="vertical_center"
            ohos:left_padding="$string:container_padding_size"
            ohos:right_padding="$string:container_padding_size"
            ohos:width="0"
            ohos:weight="1">
            <TextField
                ohos:text_size="$string:normal_font_size"
                ohos:id="$+id:search_input"
                ohos:weight="1"
                ohos:height="match_parent"
                ohos:width="0"/>
            <Image
                ohos:image_src="$media:search_icon_clear"
                ohos:scale_mode="stretch"
                ohos:id="$+id:search_icon_clear"
                ohos:height="$string:middle_icon_size"
                ohos:width="$string:middle_icon_size"/>
        </DirectionalLayout>
        <Button
            ohos:id="$+id:search_btn"
            ohos:text_color="$color:search_text_color"
            ohos:text_size="$string:normal_font_size"
            ohos:left_margin="$string:container_padding_size"
            ohos:text_alignment="center"
            ohos:text="$string:search_btn_text"
            ohos:background_element="$graphic:search_btn_decoration"
            ohos:height="$string:middel_avater_size"
            ohos:width="$string:search_btn_width"/>
    </DirectionalLayout>
    <ScrollView
        ohos:id="$+id:search_scroll"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent">

            <DirectionalLayout
                ohos:id="$+id:search_record_layout"
                ohos:orientation="vertical"
                ohos:padding="$string:container_padding_size"
                ohos:background_element="$graphic:box_decoration"
                ohos:bottom_margin="$string:container_padding_size"
                ohos:height="match_content"
                ohos:width="match_parent">
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:id="$+id:title_wrapper"
                    ohos:alignment="vertical_center"
                    ohos:bottom_margin="$string:container_padding_size"
                    ohos:orientation="horizontal">
                    <DirectionalLayout
                        ohos:background_element="$color:active_color"
                        ohos:height="$string:small_height"
                        ohos:width="$string:small_width"/>
                    <Text
                        ohos:text="$string:search_record_text"
                        ohos:text_size="$string:normal_font_size"
                        ohos:left_margin="$string:small_margin_size"
                        ohos:height="match_content"
                        ohos:width="match_content"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:orientation="vertical"
                    ohos:id="$+id:search_record_label_layout"
                    ohos:height="match_content"
                    ohos:width="match_parent"/>
            </DirectionalLayout>

            <ListContainer
                ohos:id="$+id:search_result_list"
                ohos:visibility="hide"
                ohos:height="match_content"
                ohos:bottom_margin="$string:container_padding_size"
                ohos:width="match_parent"/>
            <ListContainer
                ohos:bottom_margin="$string:container_padding_size"
                ohos:padding="$string:container_padding_size"
                ohos:background_element="$graphic:box_decoration"
                ohos:id="$+id:search_movie_list"
                ohos:height="match_content"
                ohos:orientation="vertical"
                ohos:width="match_parent"/>
        </DirectionalLayout>
    </ScrollView>

</DirectionalLayout>