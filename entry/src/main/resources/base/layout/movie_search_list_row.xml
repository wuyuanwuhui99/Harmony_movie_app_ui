<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:padding="$string:container_padding_size"
    ohos:background_element="$graphic:box_decoration"
    ohos:top_margin="$string:small_margin_size">
    <Image
        ohos:scale_mode="stretch"
        ohos:id="$+id:search_item_img"
        ohos:height="$string:movie_item_height_size"
        ohos:width="$string:movie_item_width_size"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="0"
        ohos:orientation="vertical"
        ohos:left_margin="$string:container_padding_size"
        ohos:weight="1">
        <Text
            ohos:text_weight="$string:font_weight_size"
            ohos:text_size="$string:normal_font_size"
            ohos:bottom_margin="$string:min_margin_size"
            ohos:id="$+id:search_item_movie_name"
            ohos:height="match_content"
            ohos:width="match_parent"/>
        <Text
            ohos:multiple_lines="true"
            ohos:text_size="$string:normal_font_size"
            ohos:bottom_margin="$string:min_margin_size"
            ohos:id="$+id:search_item_star"
            ohos:height="match_content"
            ohos:width="match_parent"/>
        <Text
            ohos:text_size="$string:normal_font_size"
            ohos:bottom_margin="$string:min_margin_size"
            ohos:id="$+id:search_item_director"
            ohos:height="match_content"
            ohos:width="match_parent"/>
        <Text
            ohos:text_size="$string:normal_font_size"
            ohos:bottom_margin="$string:min_margin_size"
            ohos:id="$+id:search_item_category"
            ohos:height="match_content"
            ohos:width="match_parent"/>
        <Text
            ohos:text_size="$string:normal_font_size"
            ohos:bottom_margin="$string:min_margin_size"
            ohos:id="$+id:search_item_release_time"
            ohos:height="match_content"
            ohos:width="match_parent"/>
    </DirectionalLayout>
</DirectionalLayout>