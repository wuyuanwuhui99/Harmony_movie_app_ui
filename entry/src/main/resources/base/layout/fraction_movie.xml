<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:background_element="$graphic:box_decoration"
        ohos:id="$+id:movie_avater_wrapper"
        ohos:orientation="horizontal"
        ohos:padding="$string:container_padding_size"
        ohos:height="match_content"
        ohos:width="match_parent"/>
    <ScrollView
        ohos:id="$+id:movie_scroll_view"
        ohos:weight="1"
        ohos:height="0vp"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical"
        >
            <DirectionalLayout
                ohos:id="$+id:movie_swriper_wrapper"
                ohos:top_margin="$string:container_padding_size"
                ohos:height="match_content"
                ohos:width="match_parent"/>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:id="$+id:movie_category_list"/>
        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>