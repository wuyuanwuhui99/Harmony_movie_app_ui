<?xml version="1.0" encoding="utf-8"?>
<!--suppress HosDomInspection -->
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <ScrollView
        ohos:weight="1"
        ohos:height="0vp"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:id="$+id:home_layout"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$color:page_background_color"
            ohos:weight="1">
        </DirectionalLayout>
        <DirectionalLayout
            ohos:visibility="hide"
            ohos:id="$+id:movie_layout"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$color:page_background_color"
            ohos:weight="1">
        </DirectionalLayout>
        <DirectionalLayout
            ohos:visibility="hide"
            ohos:id="$+id:tv_layout"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$color:page_background_color"
            ohos:weight="1">
        </DirectionalLayout>
        <DirectionalLayout
            ohos:visibility="hide"
            ohos:id="$+id:my_layout"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$color:page_background_color"
            ohos:weight="1">
        </DirectionalLayout>
    </ScrollView>

    <DirectionalLayout
        ohos:background_element="$color:buttom_nav_background_color"
        ohos:orientation="horizontal"
        ohos:width="match_parent"
        ohos:height="match_content">
        <DirectionalLayout
            ohos:id="$+id:home_dir"
            ohos:height="match_content"
            ohos:weight="1"
            ohos:orientation="vertical"
            ohos:alignment="horizontal_center"
            ohos:padding="$string:small_margin_size"
            >
            <Image
                ohos:id="$+id:home_img"
                ohos:height="$string:bottomBar_icon_size"
                ohos:width="$string:bottomBar_icon_size"
                ohos:scale_mode="zoom_center"
                ohos:image_src="$media:icon_home_active"
                />
            <Text
                ohos:id="$+id:home_text"
                ohos:top_margin="$string:small_margin_size"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="$string:normal_font_size"
                ohos:text_color="$color:buttom_nav_active_color"
                ohos:text="$string:bottomBar_home"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:movie_dir"
            ohos:height="match_content"
            ohos:weight="1"
            ohos:orientation="vertical"
            ohos:alignment="horizontal_center"
            ohos:padding="$string:small_margin_size"
            >
            <Image
                ohos:id="$+id:movie_img"
                ohos:height="$string:bottomBar_icon_size"
                ohos:width="$string:bottomBar_icon_size"
                ohos:scale_mode="zoom_center"
                ohos:image_src="$media:icon_movie"
                />
            <Text
                ohos:id="$+id:movie_text"
                ohos:top_margin="$string:small_margin_size"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="$string:normal_font_size"
                ohos:text="$string:bottomBar_movie"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:tv_dir"
            ohos:height="match_content"
            ohos:weight="1"
            ohos:orientation="vertical"
            ohos:alignment="horizontal_center"
            ohos:padding="$string:small_margin_size"
            >
            <Image
                ohos:id="$+id:tv_img"
                ohos:height="$string:bottomBar_icon_size"
                ohos:width="$string:bottomBar_icon_size"
                ohos:scale_mode="zoom_center"
                ohos:image_src="$media:icon_tv"
                />
            <Text
                ohos:id="$+id:tv_text"
                ohos:top_margin="$string:small_margin_size"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="$string:normal_font_size"
                ohos:text="$string:bottomBar_tv"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:my_dir"
            ohos:height="match_content"
            ohos:weight="1"
            ohos:orientation="vertical"
            ohos:alignment="horizontal_center"
            ohos:padding="$string:small_margin_size"
            >
            <Image
                ohos:id="$+id:my_img"
                ohos:height="$string:bottomBar_icon_size"
                ohos:width="$string:bottomBar_icon_size"
                ohos:scale_mode="zoom_center"
                ohos:image_src="$media:icon_user"
                />
            <Text
                ohos:id="$+id:my_text"
                ohos:top_margin="$string:small_margin_size"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="$string:normal_font_size"
                ohos:text="$string:bottomBar_my"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>