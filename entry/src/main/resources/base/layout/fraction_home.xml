<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:padding="15vp"
    ohos:background_element="$color:page_background_color"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:background_element="$graphic:box_decoration"
        ohos:id="$+id:avater_wrapper"
        ohos:orientation="horizontal"
        ohos:padding="$string:container_padding_size"
        ohos:height="match_content"
        ohos:width="match_parent"/>
    <ScrollView
        ohos:weight="1"
        ohos:height="0vp"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical"
        >
            <DirectionalLayout
                ohos:id="$+id:swriper_wrapper"
                ohos:top_margin="$string:container_padding_size"
                ohos:height="match_content"
                ohos:width="match_parent"/>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:background_element="$graphic:box_decoration"
                ohos:top_margin="$string:container_padding_size"
                ohos:padding="$string:container_padding_size"
                ohos:orientation="horizontal"
                ohos:width="match_parent">
                <DirectionalLayout
                    ohos:weight="1"
                    ohos:orientation="vertical"
                    ohos:alignment="horizontal_center"
                    ohos:height="match_content"
                    ohos:width="0">
                    <Image
                        ohos:scale_mode="zoom_center"
                        ohos:image_src="$media:icon_hot"
                        ohos:height="$string:big_icon_size"
                        ohos:width="$string:big_icon_size"/>
                    <Text
                        ohos:text_size="$string:normal_font_size"
                        ohos:top_margin="$string:small_margin_size"
                        ohos:text="$string:hot_text"
                        ohos:height="match_content"
                        ohos:width="match_content"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:weight="1"
                    ohos:orientation="vertical"
                    ohos:alignment="horizontal_center"
                    ohos:height="match_content"
                    ohos:width="0">
                    <Image
                        ohos:scale_mode="zoom_center"
                        ohos:image_src="$media:icon_play"
                        ohos:height="$string:big_icon_size"
                        ohos:width="$string:big_icon_size"/>
                    <Text
                        ohos:text_size="$string:normal_font_size"
                        ohos:top_margin="$string:small_margin_size"
                        ohos:text="$string:play_text"
                        ohos:height="match_content"
                        ohos:width="match_content"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:weight="1"
                    ohos:orientation="vertical"
                    ohos:alignment="horizontal_center"
                    ohos:height="match_content"
                    ohos:width="0">
                    <Image
                        ohos:scale_mode="zoom_center"
                        ohos:image_src="$media:icon_new"
                        ohos:height="$string:big_icon_size"
                        ohos:width="$string:big_icon_size"/>
                    <Text
                        ohos:text_size="$string:normal_font_size"
                        ohos:top_margin="$string:small_margin_size"
                        ohos:text="$string:new_text"
                        ohos:height="match_content"
                        ohos:width="match_content"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:weight="1"
                    ohos:orientation="vertical"
                    ohos:alignment="horizontal_center"
                    ohos:height="match_content"
                    ohos:width="0">
                    <Image
                        ohos:scale_mode="zoom_center"
                        ohos:image_src="$media:icon_classify"
                        ohos:height="$string:big_icon_size"
                        ohos:width="$string:big_icon_size"/>
                    <Text
                        ohos:text_size="$string:normal_font_size"
                        ohos:top_margin="$string:small_margin_size"
                        ohos:text="$string:classify_text"
                        ohos:height="match_content"
                        ohos:width="match_content"/>
                </DirectionalLayout>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:id="$+id:category_list"/>
        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>