<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:orientation="vertical"
    ohos:left_margin="$string:dialog_margin"
    ohos:right_margin="$string:dialog_margin"
    ohos:background_element="$graphic:box_decoration"
    >
    <Text
        ohos:id="$+id:dialog_tips"
        ohos:text_alignment="center"
        ohos:padding="$string:dialog_margin"
        ohos:text_size="$string:normal_font_size"
        ohos:height="match_content"
        ohos:width="match_parent"/>
    <DirectionalLayout
        ohos:height="$string:button_border_size"
        ohos:background_element="$color:page_background_color"
        ohos:width="match_parent"/>
    <DirectionalLayout
        ohos:orientation="horizontal"
        ohos:height="match_content"
        ohos:width="match_parent">
        <Button
            ohos:text_color="$color:disable_color"
            ohos:text="$string:dialog_cancel"
            ohos:text_alignment="center"
            ohos:text_size="$string:normal_font_size"
            ohos:id="$+id:dialog_cancle"
            ohos:height="match_content"
            ohos:padding="$string:container_padding_size"
            ohos:width="0"
            ohos:weight="1"/>
        <DirectionalLayout
            ohos:background_element="$color:page_background_color"
            ohos:height="$string:button_height_size"
            ohos:width="$string:button_border_size"/>
        <Button
            ohos:text="$string:dialog_sure"
            ohos:text_alignment="center"
            ohos:text_size="$string:normal_font_size"
            ohos:id="$+id:dialog_sure"
            ohos:padding="$string:container_padding_size"
            ohos:height="match_content"
            ohos:width="0"
            ohos:weight="1"/>
    </DirectionalLayout>
</DirectionalLayout>