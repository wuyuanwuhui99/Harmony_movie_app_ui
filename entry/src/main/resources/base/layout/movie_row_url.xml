<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:top_margin="$string:small_margin_size"
    ohos:id="$+id:row_url_layout">
    <Button
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="0"
        ohos:left_margin="$string:small_margin_size"
        ohos:text_alignment="center"
        ohos:text_size="$string:normal_font_size"
        ohos:top_padding="$string:small_margin_size"
        ohos:bottom_padding="$string:small_margin_size"
        ohos:background_element="$graphic:url_button_border"
        ohos:id="$+id:url_item_1"/>
    <Button
        ohos:left_margin="$string:container_padding_size"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:text_size="$string:normal_font_size"
        ohos:top_padding="$string:small_margin_size"
        ohos:bottom_padding="$string:small_margin_size"
        ohos:background_element="$graphic:url_button_border"
        ohos:id="$+id:url_item_2"/>
    <Button
        ohos:left_margin="$string:container_padding_size"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:text_size="$string:normal_font_size"
        ohos:top_padding="$string:small_margin_size"
        ohos:bottom_padding="$string:small_margin_size"
        ohos:background_element="$graphic:url_button_border"
        ohos:id="$+id:url_item_3"/>
    <Button
        ohos:left_margin="$string:container_padding_size"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:text_size="$string:normal_font_size"
        ohos:top_padding="$string:small_margin_size"
        ohos:bottom_padding="$string:small_margin_size"
        ohos:background_element="$graphic:url_button_border"
        ohos:id="$+id:url_item_4"/>
    <Button
        ohos:left_margin="$string:container_padding_size"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:text_size="$string:normal_font_size"
        ohos:top_padding="$string:small_margin_size"
        ohos:bottom_padding="$string:small_margin_size"
        ohos:background_element="$graphic:url_button_border"
        ohos:id="$+id:url_item_5"/>
</DirectionalLayout>