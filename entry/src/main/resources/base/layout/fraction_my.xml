<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:margin="$string:container_padding_size"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="vertical_center"
        ohos:background_element="$graphic:box_decoration"
        ohos:padding="$string:container_padding_size"
    >
        <DirectionalLayout
            ohos:id="$+id:my_avater_layout"
            ohos:height="match_content"
            ohos:right_margin="$string:container_padding_size"
            ohos:width="match_content"/>
        <DirectionalLayout
            ohos:orientation="vertical"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="1">
            <Text
                ohos:text_weight="700"
                ohos:id="$+id:user_name"
                ohos:text_size="$string:normal_font_size"
                ohos:height="match_content"
                ohos:width="match_content"/>
            <Text
                ohos:text_color="$color:sub_title_color"
                ohos:id="$+id:sign"
                ohos:text_size="$string:normal_font_size"
                ohos:height="match_content"
                ohos:width="match_content"/>
        </DirectionalLayout>
        <Image
            ohos:image_src="$media:icon_edit"
            ohos:height="$string:middle_icon_size"
            ohos:width="$string:middle_icon_size"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="vertical_center"
        ohos:background_element="$graphic:box_decoration"
        ohos:padding="$string:container_padding_size"
        ohos:top_margin="$string:container_padding_size"
    >
        <DirectionalLayout
            ohos:orientation="vertical"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="horizontal_center"
            ohos:weight="1">
            <Text
                ohos:text_size="$string:normal_font_size"
                ohos:id="$+id:my_age_count"
                ohos:text_weight="$string:font_weight_size"
                ohos:height="match_content"
                ohos:bottom_margin="$string:small_margin_size"
                ohos:width="match_content"/>
            <Text
                ohos:text_color="$color:sub_title_color"
                ohos:text_size="$string:normal_font_size"
                ohos:text="$string:my_age_count"
                ohos:height="match_content"
                ohos:width="match_content"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:orientation="vertical"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="horizontal_center"
            ohos:weight="1">
            <Text
                ohos:text_size="$string:normal_font_size"
                ohos:id="$+id:my_favorite_count"
                ohos:text_weight="$string:font_weight_size"
                ohos:height="match_content"
                ohos:bottom_margin="$string:small_margin_size"
                ohos:width="match_content"/>
            <Text
                ohos:text_color="$color:sub_title_color"
                ohos:text_size="$string:normal_font_size"
                ohos:text="$string:my_favorite_count"
                ohos:height="match_content"
                ohos:width="match_content"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:orientation="vertical"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="horizontal_center"
            ohos:weight="1">
            <Text
                ohos:text_size="$string:normal_font_size"
                ohos:id="$+id:my_play_count"
                ohos:text_weight="$string:font_weight_size"
                ohos:height="match_content"
                ohos:bottom_margin="$string:small_margin_size"
                ohos:width="match_content"/>
            <Text
                ohos:text_color="$color:sub_title_color"
                ohos:text_size="$string:normal_font_size"
                ohos:text="$string:my_play_count"
                ohos:height="match_content"
                ohos:width="match_content"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:orientation="vertical"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="horizontal_center"
            ohos:weight="1">
            <Text
                ohos:text_size="$string:normal_font_size"
                ohos:id="$+id:my_view_count"
                ohos:text_weight="$string:font_weight_size"
                ohos:height="match_content"
                ohos:bottom_margin="$string:small_margin_size"
                ohos:width="match_content"/>
            <Text
                ohos:text_color="$color:sub_title_color"
                ohos:text_size="$string:normal_font_size"
                ohos:text="$string:my_view_count"
                ohos:height="match_content"
                ohos:width="match_content"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:alignment="vertical_center"
        ohos:background_element="$graphic:box_decoration"
        ohos:padding="$string:container_padding_size"
        ohos:top_margin="$string:container_padding_size"
    >
        <DirectionalLayout
            ohos:orientation="horizontal"
            ohos:height="match_content"
            ohos:width="match_parent">
            <Image
                ohos:scale_mode="stretch"
                ohos:image_src="$media:icon_play_record"
                ohos:height="$string:middle_icon_size"
                ohos:width="$string:middle_icon_size"/>
            <Text
                ohos:left_margin="$string:small_margin_size"
                ohos:text="$string:play_record_text"
                ohos:text_size="$string:normal_font_size"
                ohos:height="match_content"
                ohos:width="match_content"/>
        </DirectionalLayout>
        <ListContainer
            ohos:id="$+id:play_record_list"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:background_element="$graphic:box_decoration"
        ohos:padding="$string:container_padding_size"
        ohos:top_margin="$string:container_padding_size"
    >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:border_bottom"
            ohos:alignment="vertical_center"
            ohos:orientation="horizontal">
            <Image
                ohos:scale_mode="stretch"
                ohos:image_src="$media:icon_collection"
                ohos:height="$string:middle_icon_size"
                ohos:width="$string:middle_icon_size"/>
            <Text
                ohos:weight="1"
                ohos:left_margin="$string:small_margin_size"
                ohos:text="$string:my_favorite_text"
                ohos:text_size="$string:normal_font_size"
                ohos:height="match_content"
                ohos:width="match_content"/>
            <Image
                ohos:scale_mode="stretch"
                ohos:image_src="$media:icon_arrow"
                ohos:height="$string:middle_icon_size"
                ohos:width="$string:middle_icon_size"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>