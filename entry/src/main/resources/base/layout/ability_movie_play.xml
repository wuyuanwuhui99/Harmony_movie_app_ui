<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$color:page_background_color"
    ohos:orientation="vertical">
    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:background_element="$color:play_webview_color"
                ohos:id="$+id:webview_layout"
                ohos:height="$string:play_webview_size"
                ohos:width="match_parent"/>
            <DirectionalLayout
                ohos:padding="$string:container_padding_size"
                ohos:height="match_content"
                ohos:width="match_parent">
                <DirectionalLayout
                    ohos:alignment="horizontal_center"
                    ohos:background_element="$graphic:box_decoration"
                    ohos:orientation="horizontal"
                    ohos:padding="$string:container_padding_size"
                    ohos:height="match_content"
                    ohos:width="match_parent">
                    <Image
                        ohos:scale_mode="stretch"
                        ohos:image_src="$media:icon_comment"
                        ohos:height="$string:large_icon_size"
                        ohos:width="$string:large_icon_size"/>
                    <Text
                        ohos:left_margin="$string:container_padding_size"
                        ohos:text_size="$string:normal_font_size"
                        ohos:id="$+id:play_comment_count"
                        ohos:weight="1"
                        ohos:height="match_content"
                        ohos:width="0"/>
                    <Image
                        ohos:scale_mode="stretch"
                        ohos:image_src="$media:icon_collection"
                        ohos:id="$+id:play_icon_favorite"
                        ohos:height="$string:large_icon_size"
                        ohos:width="$string:large_icon_size"/>
                    <Image
                        ohos:left_margin="$string:container_padding_size"
                        ohos:scale_mode="stretch"
                        ohos:image_src="$media:icon_share"
                        ohos:id="$+id:play_icon_share"
                        ohos:height="$string:large_icon_size"
                        ohos:width="$string:large_icon_size"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:top_margin="$string:container_padding_size"
                    ohos:background_element="$graphic:box_decoration"
                    ohos:orientation="vertical"
                    ohos:padding="$string:container_padding_size"
                    ohos:height="match_content"
                    ohos:width="match_parent">
                    <Text
                        ohos:text_weight="$string:font_weight_size"
                        ohos:text_size="$string:normal_font_size"
                        ohos:id="$+id:play_movie_name"
                        ohos:height="match_content"
                        ohos:width="match_content"/>
                    <Text
                        ohos:multiple_lines="true"
                        ohos:top_margin="$string:small_margin_size"
                        ohos:text_size="$string:normal_font_size"
                        ohos:id="$+id:play_star"
                        ohos:height="match_content"
                        ohos:width="match_content"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:id="$+id:play_url_group_layout"
                    ohos:orientation="vertical"
                    ohos:height="match_content"
                    ohos:width="match_parent"/>

                <DirectionalLayout
                    ohos:id="$+id:play_likes_layout"
                    ohos:height="match_content"
                    ohos:width="match_parent"/>

                <DirectionalLayout
                    ohos:id="$+id:play_recommend_layout"
                    ohos:height="match_content"
                    ohos:width="match_parent"/>
            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>