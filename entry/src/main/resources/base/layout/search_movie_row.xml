<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:top_margin="$string:small_margin_size">
    <DirectionalLayout
        ohos:id="$+id:search_movie_layout_1"
        ohos:height="match_content"
        ohos:width="0"
        ohos:orientation="vertical"
        ohos:alignment="horizontal_center"
        ohos:weight="1">
        <Image
            ohos:bottom_margin="$string:small_margin_size"
            ohos:id="$+id:search_movie_img_1"
            ohos:scale_mode="stretch"
            ohos:height="$string:movie_item_height_size"
            ohos:width="$string:movie_item_width_size"/>
        <Text
            ohos:truncation_mode="ellipsis_at_end"
            ohos:id="$+id:search_movie_text_1"
            ohos:text_size="$string:normal_font_size"
            ohos:height="match_content"
            ohos:width="match_parent"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:id="$+id:search_movie_layout_2"
        ohos:height="match_content"
        ohos:width="0"
        ohos:orientation="vertical"
        ohos:alignment="horizontal_center"
        ohos:left_padding="$string:container_padding_size"
        ohos:weight="1">
        <Image
            ohos:bottom_margin="$string:small_margin_size"
            ohos:id="$+id:search_movie_img_2"
            ohos:scale_mode="stretch"
            ohos:height="$string:movie_item_height_size"
            ohos:width="$string:movie_item_width_size"/>
        <Text
            ohos:truncation_mode="ellipsis_at_end"
            ohos:id="$+id:search_movie_text_2"
            ohos:text_size="$string:normal_font_size"
            ohos:height="match_content"
            ohos:width="match_content"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:id="$+id:search_movie_layout_3"
        ohos:height="match_content"
        ohos:width="0"
        ohos:orientation="vertical"
        ohos:alignment="horizontal_center"
        ohos:left_padding="$string:container_padding_size"
        ohos:weight="1">
        <Image
            ohos:bottom_margin="$string:small_margin_size"
            ohos:id="$+id:search_movie_img_3"
            ohos:scale_mode="stretch"
            ohos:height="$string:movie_item_height_size"
            ohos:width="$string:movie_item_width_size"/>
        <Text
            ohos:truncation_mode="ellipsis_at_end"
            ohos:id="$+id:search_movie_text_3"
            ohos:text_size="$string:normal_font_size"
            ohos:height="match_content"
            ohos:width="match_parent"/>
    </DirectionalLayout>
</DirectionalLayout>